    <% if @booking.errors.any?%>
        <div class=" bg-jet mt-5 mb-2 grid error-explanation mx-auto justify-items-center border-solid border-black border-4 border-t-2 max-w-6xl">
            <%@booking.errors.each do |error| %>
                <h4 class="font-bold text-white"><%=error.full_message%></h4>
            <% end %>
        </div>
    <% end %>
    <div class="m-20 mt-0 mx-auto"><%= render 'booking_form', flight_id: @booking.flight_id %></div>