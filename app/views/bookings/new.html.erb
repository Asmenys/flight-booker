<%= form_with model: @booking do |f|%>
    <%= render 'flights/flight', flight: Flight.find(params[:flight][:flight_id])%>
    <%= f.hidden_field :flight_id, value: params[:flight][:flight_id]%>
    <%= f.fields_for :passengers do |passenger_form| %>
        <%= render 'passenger_form', passenger_form: passenger_form %>
    <% end %>
    <%=f.submit "Submit"%>
<% end %>